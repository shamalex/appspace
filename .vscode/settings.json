{
	"[json]": {
		"editor.formatOnSave": true
	},
	"[jsonc]": {
		"editor.formatOnSave": true
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "never"
	},
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.svn": true,
		"**/build": true
	},
	"stylelint.enable": true,
	"css.validate": false,
	"scss.validate": false,
	"stylelint.validate": ["css", "scss", "javascript", "typescript", "typescriptreact"]
}
